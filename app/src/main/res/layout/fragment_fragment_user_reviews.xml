<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eco.org.greenapp.fragments.FragmentUserReviews">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/noReviewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:fontFamily="@font/lora_regular"
        android:text="Momentan utilizatorul nu are nicio evaluare."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/noReview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/forbidden" />

    <ListView
        android:id="@+id/idLvReview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_edit_text"
    android:weightSum="3.2">

    <ImageView
        android:id="@+id/productPhoto"
        android:layout_width="0dp"
        android:layout_height="148dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/aboutProductLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_gothic_regular"
            android:text="titlu produs"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.4">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:fontFamily="@font/lora_regular"
                android:text="@string/byWho"
                android:textColor="@color/darkGrey" />

            <TextView
                android:id="@+id/ownerUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nanum_gothic_regular"
                android:text="@string/user"
                android:textAllCaps="true"
                android:textColor="@color/colorGreenSheen" />
        </LinearLayout>

        <TextView
            android:id="@+id/adType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lora_regular"
            android:text="tip "
            android:textColor="@color/darkGrey" />

        <LinearLayout
            android:id="@+id/availabilityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:fontFamily="@font/lora_regular"
                android:text="Data postÄƒrii"
                android:textColor="@color/darkGrey" />

            <TextView
                android:id="@+id/timeAdded"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:fontFamily="@font/lora_regular"
                android:text="2/26/2018"
                android:textColor="@color/darkGrey" />
        </LinearLayout>

        <TextView
            android:id="@+id/statusInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/nanum_gothic_regular"
            android:text="STATUS"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/accent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/moreAboutAd"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icnext" />
    </LinearLayout>
</LinearLayout>
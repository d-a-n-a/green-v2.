<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eco.org.greenapp.eco.org.greenapp.activities.AboutApp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/backgroundAbout"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backgoround_aboutmin" />

    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="303dp"
        android:layout_height="191dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="279dp"
        android:background="#80000000"
        android:fontFamily="@font/nanum_gothic_regular"
        android:maxHeight="20dp"
        android:padding="7dp"
        android:scrollbars="vertical"
        android:text="Aplicația își propune să aducă împreună oamenii care își doresc ca prin simplele lor acțiuni să contribuie la un mediu cât mai
favorabil. Se dorește în esență crearea progresivă a unei comunități prin intermediul căreia să fie facilitat schimbul de produse în aparență
inutile, dar cărora li se poate găsi întrebuințare."
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRapoarte"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRapoarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_diverse"
        android:fontFamily="@font/nanum_gothic_regular"
        android:letterSpacing=".2"
        android:text=">"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAbout" />
</android.support.constraint.ConstraintLayout>

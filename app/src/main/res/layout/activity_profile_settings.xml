<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDiverse"
    tools:context="eco.org.greenapp.eco.org.greenapp.activities.ProfileSettings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.032">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="411dp"
                android:layout_height="wrap_content"
                android:weightSum="5">

                <LinearLayout
                    android:id="@+id/userAvatarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_border_grid"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:weightSum="5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/userAvatar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/userprofilepicture"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="4dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3.5"
                        android:fontFamily="@font/nanum_gothic_regular"
                        android:gravity="center_vertical"
                        android:text="@string/photo"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="82dp"
                        tools:layout_editor_absoluteY="17dp" />

                    <ImageView
                        android:id="@+id/nextAvatarLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:src="@drawable/icnext" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/userAboutLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_border_grid"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout1">

                <ImageView
                    android:id="@+id/about"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/info"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="4dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/nanum_gothic_regular"
                        android:gravity="center_vertical"
                        android:text="@string/about"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="82dp"
                        tools:layout_editor_absoluteY="17dp" />

                    <TextView
                        android:id="@+id/aboutUserDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:ellipsize="end"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/nextAboutLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/icnext" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/userScoreLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_border_grid"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userAboutLayout"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/star"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="4dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/nanum_gothic_regular"
                        android:gravity="center_vertical"
                        android:text="@string/reviewScore"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="82dp"
                        tools:layout_editor_absoluteY="17dp" />

                    <TextView
                        android:id="@+id/userScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="0/5"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="82dp"
                        tools:layout_editor_absoluteY="17dp" />
                </LinearLayout>

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout

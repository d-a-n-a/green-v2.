                </LinearLayout>

                <ImageView
                    android:id="@+id/nextLastNameLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:src="@drawable/icnext" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/userFirstNameLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_border_grid"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userLastNameLayout">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/f_letter" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_gothic_regular"
                        android:text="Prenume"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/userFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daniela" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/nextFirstNameLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:src="@drawable/icnext" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/userEmailLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_border_grid"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userFirstNameLayout">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/mail" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_gothic_regular"
                        android:text="Email"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/userEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="dana.neagu@gmail.com" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/nextEmailLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:src="@drawable/icnext" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/userPhoneLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_border_grid"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userEmailLayout">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/phonecall" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_gothic_regular"
                        android:text="Telefon"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/userPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0737683007" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/nextPhoneLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:src="@drawable/icnext" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/userLocationLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_border_grid"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userPhoneLayout">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/locationmarker" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_gothic_regular"
                        android:text="Locatie aproximativa"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/userLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Str. Mihail Moxa" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/nextLocationLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:src="@drawable/icnext" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constrainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/constrlay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="170dp">


            <LinearLayout
                android:id="@+id/usernameLAyout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_border_grid"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/useravatar" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_gothic_regular"
                        android:text="Username"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                android:id="@+id/aboutAppLayout"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/bottom_border_grid"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="5"
                app:layout_constraintBottom_toTopOf="@+id/logOutLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/info" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_gothic_regular"
                        android:text="Despre aplicatie"
                        android:textColor="@color/colorPrimaryDark" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/nextAboutAppLayout"
                    android:layout_width="0dp"

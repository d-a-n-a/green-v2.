<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="eco.org.greenapp.eco.org.greenapp.profile_activities.ChangeProfilePhoto">

    <ImageView
        android:id="@+id/selectedImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnSelectPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_diverse"
        android:text="selectare imagine"
        android:textColor="@color/colorGreenSheen"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSavePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_sign_in"
        android:text="salvare"
        android:textColor="#fff"
        android:textStyle="bold" />
</LinearLayout>
